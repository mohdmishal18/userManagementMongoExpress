<div class="container">
    <div class="form-container" id="signup-form" >
        <h1>Edit User</h1>
        <form action="" method="post" onsubmit="return validate()">
        <label for="new-username">Username</label>
        <input type="text" id="forname" name="name" value="<%= user.name %>" required>
        <label for="new-email">Email</label>
        <input type="email" id="new-email" name="email" value="<%= user.email %>" required>
        <label for="new-number" >Mobile</label>
        <input type="text" name="mobile" value="<%= user.mobile %>" required>
        <input type="hidden" name="id" value="<%= user._id %>">
        <button type="submit" value="update user"  3px;" onclick="return confirm('are you sure?')">Update User</button>
        </form>

        <div class="d-flex align-items-center justify-content-center">
