
<%- include('../layouts/header.ejs') -%>
<div class="container">
    <div class="form-container" id="signup-form" >
        <h1>ADD NEW USER</h1>
        <form action="" method="post" onsubmit="return validate()">
        <label for="new-username">Username</label>
        <input type="text" id="forname" name="name" required>
        <label for="new-email">Email</label>
        <input type="email" id="new-email" name="email" required>
        <label for="new-number" >Mobile</label>
        <input type="text" name="mobile" required>
        <label for="new-password">Password</label>
        <input type="password" id="new-password" name="password" required>
        <button type="submit" value="Add User">Sign Up</button>
        </form>

        <%

            if(typeof message !== 'undefined'){
                %>
                <h4 style="color: white; background-color:black;"><%= message %></h4>
                <%
            }

        %>
        <div class="d-flex align-items-center justify-content-center">
            <a class="btn btn-dark rounded-pill btn-sm bt-reg p-3 mt-3" href="/admin/home" id="loggo">Go Back</a>
            
          </div>
    </div>
</div>

<script>

